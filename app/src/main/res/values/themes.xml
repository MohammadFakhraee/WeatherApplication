<resources>
    <!-- Base application theme. -->
    <style name="Theme.WeatherApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefImageButton" parent="Theme.WeatherApplication">
        <item name="android:background">@color/transparent</item>
        <item name="tint">@color/purple_500</item>
    </style>

    <style name="DefTxtStyle" parent="Theme.WeatherApplication">
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="FadeTxtStyle" parent="Theme.WeatherApplication">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefRecyclerView" parent="Theme.WeatherApplication">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DefRecyclerView.DefHorizontal" parent="DefRecyclerView">
        <item name="android:orientation">horizontal</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="DefRecyclerView.DefVertical" parent="DefRecyclerView">
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="DefFragment" parent="Theme.WeatherApplication">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DefEditText" parent="Theme.WeatherApplication">
        <item name="android:background">@drawable/bg_edittext_light</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/gray700</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColorHint">@color/gray400</item>
        <item name="android:drawableTint">@color/gray700</item>
    </style>

    <style name="BtnPrimary" parent="Theme.WeatherApplication">
        <item name="android:background">@drawable/bg_btn_primary_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="BgWidget" parent="Theme.WeatherApplication">
        <item name="android:background">@drawable/bg_widget_light</item>
    </style>
</resources>